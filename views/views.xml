<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="school_class_list">
      <field name="name">School list</field>
      <field name="model">school.school_class</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="grade"/>
          <field name="tutor_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="school_class_form">
      <field name="name">School form</field>
      <field name="model">school.school_class</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="grade"/>
                <field name="date_begin"/>
                <field name="date_end"/>
              </group>
              <group>
                <field name="tutor_id"/>
                <field name="student_number"/>
              </group>
            </group>
            <group>
              <field name="student_ids"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="school_class_action_window">
      <field name="name">school_class_action</field>
      <field name="res_model">school.school_class</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="School" id="school.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Students" id="school.menu_1" parent="school.menu_root"/>
    <menuitem name="Config" id="school.menu_2" parent="school.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="school.menu_2_list" parent="school.menu_2"
              action="school_class_action_window"/>

  </data>
</odoo>