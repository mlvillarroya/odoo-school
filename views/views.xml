<odoo>
  <data>

    <!-- CLASS SCHOOL_CLASS -->
    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="school.school_class_list">
      <field name="name">Class list</field>
      <field name="model">school.school_class</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="grade"/>
          <field name="tutor_id"/>
        </tree>
      </field>
    </record>

    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="school.school_class_form">
      <field name="name">Class form</field>
      <field name="model">school.school_class</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
                <h1>
                    <field name="name" placeholder="Class denomination" required="True"/>
                </h1>
            </div>
            <group>
              <group>
                <field name="grade" />
                <field name="date_begin" />
                <field name="date_end" />
              </group>
              <group>
                <field name="tutor_id" />
                <field name="student_number" />
              </group>
            </group>
            <group>
              <field name="student_ids"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ACTION -->
    <record model="ir.actions.act_window" id="school.school_class_action_window">
      <field name="name">Class window</field>
      <field name="res_model">school.school_class</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- CLASS STUDENT -->
    <!-- TREE VIEW -->
    <record model="ir.ui.view" id="school.student_list">
      <field name="name">Student list</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <tree string="Student's list">
          <field name="name"/>
          <field name="last_name"/>
          <field name="id_number"/>
        </tree>
      </field>
    </record>

    <!-- FORM VIEW -->
    <record model="ir.ui.view" id="school.student_form">
      <field name="name">Student form</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="active" invisible="1"/>
            <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
            <group>
              <group>
                <field name="name" />
                <field name="last_name" />
                <field name="id_number" />
              </group>
              <group>
                <field name="birthdate" />
                <field name="age" />
                <field name="class_id"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ACTION -->
    <record model="ir.actions.act_window" id="school.student_action_window">
      <field name="name">Student window</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="school" id="school.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Students" id="school.menu_1" parent="school.menu_root" action="school.student_action_window"/>
    <menuitem name="Config" id="school.menu_2" parent="school.menu_root"/>

    <!-- actions -->

    <menuitem name="Classes" id="school.menu_2_list" parent="school.menu_2"
              action="school.school_class_action_window"/>

  </data>
</odoo>